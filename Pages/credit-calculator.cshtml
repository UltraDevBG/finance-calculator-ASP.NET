@page "/credit-calculator/{savedHash?}"
@model CreditModel

@*
@if (ViewData["debug"] != null)
{
    <div class="alert alert-success">@ViewData["debug"]</div>
}
*@

<div class="calculator-page">
    <div class="calculator-card">

        <h1 class="calculator-title">Кредитен калкулатор</h1>

        <form method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Credit Amount -->
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="credit_amount"
                               type="number"
                               class="form-control"
                               placeholder="Размер на кредит" min="100" step="1" required>
                        <label>Размер на кредит (лв.) *</label>
                    </div>
                </div>
            </div>

            <!-- Credit Length + Interest -->
            <div class="row mb-3 g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="credit_length"
                               type="number"
                               class="form-control"
                               placeholder="Срок" min="1" max="960" required>
                        <label>Срок (месеци) *</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="credit_interest"
                               type="number"
                               class="form-control"
                               placeholder="Лихва" min="0" step="0.01" required>
                        <label>Лихва (%) *</label>
                    </div>
                </div>
            </div>

            <!-- Payment Type -->
            <div class="mb-4">
                <label class="form-label text-muted">Вид вноски *</label>
                <select asp-for="payment_type" class="form-select" required>
                    <option value="annuity">Анюитетни вноски</option>
                    <option value="descreasing">Намаляващи вноски</option>
                </select>
            </div>

            <!-- Accordion -->
            <div class="accordion mb-4" id="additional_fields">
                <!-- Promo -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button"
                                data-bs-toggle="collapse" data-bs-target="#promoPeriod">
                            Промоционален период
                        </button>
                    </h2>
                    <div id="promoPeriod" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="promo_period" type="number" class="form-control form-control-sm">
                                        <label>Промо период (месеци)</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="promo_interest" type="number" step="0.01" class="form-control form-control-sm">
                                        <label>Промо лихва (%)</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating">
                                <input asp-for="gratis_period" type="number" class="form-control form-control-sm">
                                <label>Гратисен период</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Fees -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button"
                                data-bs-toggle="collapse" data-bs-target="#fees">
                            Такси
                        </button>
                    </h2>
                    <div id="fees" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <div class="fw-semibold mb-2">Първоначални такси</div>

                            <div class="input-group mb-2">
                                <div class="form-floating flex-grow-1">
                                    <input asp-for="application_fee" type="number" class="form-control form-control-sm">
                                    <label>Такса кандидатстване</label>
                                </div>
                                <select asp-for="application_fee_option" class="form-select">
                                    <option value="currency">лв.</option>
                                    <option value="percent">%</option>
                                </select>
                            </div>

                            <div class="input-group mb-2">
                                <div class="form-floating flex-grow-1">
                                    <input asp-for="processing_fee" type="number" class="form-control form-control-sm">
                                    <label>Такса обработка</label>
                                </div>
                                <select asp-for="processing_fee_option" class="form-select">
                                    <option value="currency">лв.</option>
                                    <option value="percent">%</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary w-100">
                Изчисли
            </button>

        </form>
    </div>
</div>

 @if (Model.result != null)
    {
<table id="results-table" class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Дата</th>
            <th>Месечна вноска</th>
            <th>Главница</th>
            <th>Лихва</th>
            <th>Остатък</th>
            <th>Такси</th>
            <th>Паричен поток</th>
        </tr>
    </thead>
    <tbody>   
        @for (int i = 0; i < Model.result.GetLength(0); i++)
        {
            <tr>
                <td>@Model.result[i, 0]</td>
                <td>@(i == 0 ? "-" : DateTime.Now.AddMonths(i).ToString("MM.yyyy"))</td>
                <td>@Model.result[i, 1]</td>
                <td>@Model.result[i, 2]</td>
                <td>@Model.result[i, 3]</td>
                <td>@Model.result[i, 4]</td>
                <td>@Model.result[i, 5]</td>
                <td>@Model.result[i, 6]</td>
            </tr>
        }    
    </tbody>        
</table>
}